<div class="new-wrapper" id="background-image-new">
  <div class="container login-page-container flex-container">
    <div class="flex-item">
     <h2 style="color: black; margin-bottom: 30px;" class="text-center">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-suit-shared" style="color: black;">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center" style="padding: 10px 0 15px 0;">
        <%= f.button :submit, "Log in", class: "btn yellow-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
