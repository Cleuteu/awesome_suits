<div class="container">

  <h1 class="text-center" style="margin: 0;">My suits</h1>

  <div class="container" style="padding-top: 35px; padding-bottom: 70px;">
    <div class="row">
      <% @suits.each do |suit| %>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
        <div class="wrapper">
          <div class="card-container">
            <% if suit.photo.url.nil? %>
              <% url2 = cl_image_path('placeholder090821.png') %>
            <% else %>
              <% url2 = cl_image_path suit.photo %>
            <% end %>
            <div class="top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= url2 %>');"></div>
            <div class="bottom">
              <h1 style="width: 200px;"><%= suit.name %></h1>
            </div>
          </div>
          <% if suit.user.photo.url.nil? %>
            <%= cl_image_tag("vh5z2ujeausr6hlxy3zf", width: 80, height: 80, crop: :thumb, gravity: :face, class: 'card-user') %>
          <% else %>
            <%= cl_image_tag suit.user.photo, width: 80, height: 80, crop: :thumb, gravity: :face, class: 'card-user' %>
          <% end %>
          <p class="card-price"><%= suit.price_per_day %> â‚¬</p>
          <%= link_to suit_path(suit), class: 'card-link' do %><% end %>
        </div>
        <div class="text-center">
          <% if policy(suit).edit? %>
            <%= link_to "Update", edit_suit_path(suit), class: "btn btn-link" %>
          <% end %>
          <% if policy(suit).destroy? %>
            <%= link_to "Delete", suit_path(suit),
                method: :delete,
                data: { confirm: "Are you sure?" }, class: "btn btn-link" %>
          <% end %>
        </div>
      </div>
      <% end %>
      <div style="display: flex; align-items: center; justify-content: center; font-size: 128px; width: 290px; height: 510px; margin: auto; overflow: hidden; border-radius: 9px 9px 9px 9px; border: 1px solid; opacity: 0.3; box-shadow: 1px 4px 6px rgba(0,0,0,0.1); transform: scale(0.95); transition: box-shadow 0.5s, transform 0.5s; &:hover{transform: scale(1); box-shadow: 5px 20px 30px rgba(0,0,0,0.2);}">+
        <%= link_to new_suit_path, class: 'card-link' do %><% end %></div>
    </div>
  </div>
</div>
