<%= simple_form_for @suit do |f| %>
  <%= f.input :name %>
  <%= f.input :color %>
  <%= f.input :description %>
  <%= f.input :style %>
  <%= f.input :size %>
  <%= f.input :price_per_day %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Submit", class: "btn btn-success" %>
<% end %>
