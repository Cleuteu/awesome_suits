<div style="font-weight: lighter;">
  <%= simple_form_for @suit do |f| %>
    <%= f.input :name, label: "Name your suit"  %>
    <%= f.input :color %>
    <%= f.input :description, label: "Please give a short description"  %>
    <%= f.input :style %>
    <%= f.input :size %>
    <%= f.input :price_per_day, label: "Price per day in euro" %>
    <%= f.input :address, label: 'Where is the suit?' %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Submit", class: "btn btn-success" %>
  <% end %>
</div>
