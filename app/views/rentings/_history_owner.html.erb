<div class="container" style="margin: 35px 0;">
<p>
  <% if @owner_suits.first.nil? %>
    <p>You don't have any suit on the platform</p>
  <% else %>
    <!-- <h1 class="project-name">My rentings timeline</h1> -->
      <div id="timeline">
        <% @owner_suits.each do |suit| %>
          <% suit.rentings.order(id: :desc).where(pending: true).each do |renting| %>
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg version="1.1" id="Layer_1" x="0px" y="0px"
               width="21px" height="20px" viewBox="0 0 21 20" enable-background="new 0 0 21 20" xml:space="preserve">
              <path fill="#FFFFFF" d="M19.998,6.766l-5.759-0.544c-0.362-0.032-0.676-0.264-0.822-0.61l-2.064-4.999
                c-0.329-0.825-1.5-0.825-1.83,0L7.476,5.611c-0.132,0.346-0.462,0.578-0.824,0.61L0.894,6.766C0.035,6.848-0.312,7.921,0.333,8.499
                l4.338,3.811c0.279,0.246,0.395,0.609,0.314,0.975l-1.304,5.345c-0.199,0.842,0.708,1.534,1.468,1.089l4.801-2.822
                c0.313-0.181,0.695-0.181,1.006,0l4.803,2.822c0.759,0.445,1.666-0.23,1.468-1.089l-1.288-5.345
                c-0.081-0.365,0.035-0.729,0.313-0.975l4.34-3.811C21.219,7.921,20.855,6.848,19.998,6.766z"/>
              </svg>
            </div>
            <div class="timeline-content right">
              <div class="row">
                <div class="col-xs-9">
                  <h2>Suit rented to: <strong><%= renting.user.first_name %> <%= renting.user.last_name %></strong></h2>
                  <div class="timeline-description">
                      Start date: <%= renting.start_date %>
                      -
                      End date: <%= renting.end_date %>
                    </p>
                    <%= link_to "View my renting", renting_path(renting.id), class: 'yellow-btn'%>
                  </div>
                </div>
                <div class="col-xs-3">
                  <% if renting.suit.photo.url.nil? %>
                    <% url2 = cl_image_tag('placeholder090821.png',
            width: 150, height: 200, crop: :fill) %>
                  <% else %>
                    <% url2 = cl_image_tag(renting.suit.photo,
            width: 160, height: 220, crop: :fill) %>
                  <% end %>
                <%= url2 %>
                </div>
              </div>
            </div>
            <div class="timeline-validation">
              <h4>Accept this renting?</h4>
              <%= link_to renting_path(renting), method: :patch do %>
                <i class="yellow-btn">Accept</i>
              <% end %>
              <%= link_to renting_path(renting), method: :delete do %>
                <i class="grey-btn">Refuse</i>
              <% end %>
            </div>
          </div>
          <% end %>
        <h2>Passed rentings</h2>
          <% suit.rentings.order(id: :desc).where(pending: false).each do |renting| %>
          <div class="timeline-item">
            <div class="timeline-icon">
              <svg version="1.1" id="Layer_1" x="0px" y="0px"
               width="21px" height="20px" viewBox="0 0 21 20" enable-background="new 0 0 21 20" xml:space="preserve">
              <path fill="#FFFFFF" d="M19.998,6.766l-5.759-0.544c-0.362-0.032-0.676-0.264-0.822-0.61l-2.064-4.999
                c-0.329-0.825-1.5-0.825-1.83,0L7.476,5.611c-0.132,0.346-0.462,0.578-0.824,0.61L0.894,6.766C0.035,6.848-0.312,7.921,0.333,8.499
                l4.338,3.811c0.279,0.246,0.395,0.609,0.314,0.975l-1.304,5.345c-0.199,0.842,0.708,1.534,1.468,1.089l4.801-2.822
                c0.313-0.181,0.695-0.181,1.006,0l4.803,2.822c0.759,0.445,1.666-0.23,1.468-1.089l-1.288-5.345
                c-0.081-0.365,0.035-0.729,0.313-0.975l4.34-3.811C21.219,7.921,20.855,6.848,19.998,6.766z"/>
              </svg>
            </div>
            <div class="timeline-content right">
              <div class="row">
                <div class="col-xs-9">
                  <h2>Suit rented to: <strong><%= renting.user.first_name %> <%= renting.user.last_name %></strong></h2>
                  <div class="timeline-description">
                      Start date: <%= renting.start_date %>
                      -
                      End date: <%= renting.end_date %>
                    </p>
                    <%= link_to "View my renting", renting_path(renting.id), class: 'yellow-btn'%>
                  </div>
                </div>
                <div class="col-xs-3">
                  <% if renting.suit.photo.url.nil? %>
                    <% url2 = cl_image_tag('placeholder090821.png',
            width: 150, height: 200, crop: :fill) %>
                  <% else %>
                    <% url2 = cl_image_tag(renting.suit.photo,
            width: 160, height: 220, crop: :fill) %>
                  <% end %>
                <%= url2 %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
  <% end %>
</p>
</div>
