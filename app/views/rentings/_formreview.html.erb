<div class="">
 <!--  <p> Rent this awesome suit </p> -->
  <div
    id="renting-form-div">
    <%= simple_form_for [@renting, @review] do |f| %>
      <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= f.input :title, label:'Title' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :rate, label:'Rate' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :content, label:'Message' %>
          </div>
      </div>
          <div class="text-center">
            <%= f.submit "Leave a review", class: "btn btn-success" %>
          </div>
    <% end %>
  </div>
</div>
