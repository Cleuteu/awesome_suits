<div class="recap-order">
  <h1>Recap of your order</h1>
</div>
<div class="messages">
  <h1>Messages</h1>
</div>



<div class="rate-your-order container">
  <h1 class="flex-item">Rate your order</h1>
  <div id="renting-form-div flex-item">
    <%= simple_form_for [@renting, @review] do |f| %>
        <%= f.input :title, label:'Title' %>
        <%= f.input :rate, label:'Rate', as: :hidden %>
        <fieldset class="rating">
          <input type="radio" id="star5" name="rating" value="5" /><label class = "full star-rate" for="star5" title="Awesome - 5 stars"></label>
          <input type="radio" id="star4" name="rating" value="4" /><label class = "full star-rate" for="star4" title="Pretty good - 4 stars"></label>
          <input type="radio" id="star3" name="rating" value="3" /><label class = "full star-rate" for="star3" title="Meh - 3 stars"></label>
          <input type="radio" id="star2" name="rating" value="2" /><label class = "full star-rate" for="star2" title="Kinda bad - 2 stars"></label>
          <input type="radio" id="star1" name="rating" value="1" /><label class = "full star-rate" for="star1" title="Sucks big time - 1 star"></label>
        </fieldset>
        <%= f.input :content, label:'Message and rate' %>
        <div class="text-center">
        <%= f.submit "Leave a review", class: "btn yellow-btn" %>
        </div>
    <% end %>
  </div>
</div>
  </div>
</div>
